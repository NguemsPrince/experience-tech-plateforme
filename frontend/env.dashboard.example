# Configuration du Dashboard Moderne - Expérience Tech
# Copiez ce fichier vers .env et configurez selon vos besoins

# Configuration générale
REACT_APP_NAME=Expérience Tech
REACT_APP_VERSION=2.0.0
REACT_APP_ENVIRONMENT=development

# Configuration du dashboard
REACT_APP_DASHBOARD_MODE=modern
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REAL_TIME=true

# Configuration des API
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3

# Configuration des graphiques
REACT_APP_CHART_ANIMATION_DURATION=2000
REACT_APP_CHART_UPDATE_INTERVAL=30000
REACT_APP_CHART_ENABLE_EXPORT=true

# Configuration des notifications
REACT_APP_NOTIFICATION_DURATION=4000
REACT_APP_NOTIFICATION_MAX_COUNT=10
REACT_APP_NOTIFICATION_ENABLE_SOUND=false

# Configuration du mode sombre
REACT_APP_DARK_MODE_DEFAULT=false
REACT_APP_DARK_MODE_PERSIST=true
REACT_APP_DARK_MODE_TRANSITION_DURATION=300

# Configuration des animations
REACT_APP_ANIMATION_DURATION_FAST=200
REACT_APP_ANIMATION_DURATION_NORMAL=300
REACT_APP_ANIMATION_DURATION_SLOW=500
REACT_APP_ANIMATION_ENABLE_REDUCED_MOTION=true

# Configuration de la sidebar
REACT_APP_SIDEBAR_DEFAULT_OPEN=true
REACT_APP_SIDEBAR_COLLAPSIBLE=true
REACT_APP_SIDEBAR_ANIMATION_DURATION=300

# Configuration des statistiques
REACT_APP_STATS_UPDATE_INTERVAL=60000
REACT_APP_STATS_ENABLE_TRENDS=true
REACT_APP_STATS_ENABLE_COMPARISONS=true

# Configuration des actions rapides
REACT_APP_QUICK_ACTIONS_ENABLED=true
REACT_APP_QUICK_ACTIONS_MAX_COUNT=6
REACT_APP_QUICK_ACTIONS_CUSTOMIZABLE=true

# Configuration de la recherche
REACT_APP_SEARCH_ENABLED=true
REACT_APP_SEARCH_DEBOUNCE_DELAY=300
REACT_APP_SEARCH_MIN_LENGTH=2
REACT_APP_SEARCH_MAX_RESULTS=10

# Configuration de la responsivité
REACT_APP_MOBILE_BREAKPOINT=768
REACT_APP_TABLET_BREAKPOINT=1024
REACT_APP_DESKTOP_BREAKPOINT=1280

# Configuration des performances
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_CODE_SPLITTING=true
REACT_APP_ENABLE_MEMOIZATION=true
REACT_APP_ENABLE_VIRTUALIZATION=false

# Configuration de l'accessibilité
REACT_APP_ENABLE_ARIA_LABELS=true
REACT_APP_ENABLE_KEYBOARD_NAVIGATION=true
REACT_APP_ENABLE_SCREEN_READER=true
REACT_APP_ENABLE_HIGH_CONTRAST=false

# Configuration du debugging
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_ENABLE_ERROR_REPORTING=true

# Configuration des thèmes
REACT_APP_THEME_PRIMARY_COLOR=#8B5CF6
REACT_APP_THEME_SECONDARY_COLOR=#3B82F6
REACT_APP_THEME_SUCCESS_COLOR=#10B981
REACT_APP_THEME_WARNING_COLOR=#F59E0B
REACT_APP_THEME_ERROR_COLOR=#EF4444

# Configuration des gradients
REACT_APP_GRADIENT_PRIMARY=linear-gradient(135deg, #8B5CF6 0%, #3B82F6 100%)
REACT_APP_GRADIENT_SECONDARY=linear-gradient(135deg, #F59E0B 0%, #EF4444 100%)
REACT_APP_GRADIENT_SUCCESS=linear-gradient(135deg, #10B981 0%, #059669 100%)

# Configuration des ombres
REACT_APP_SHADOW_SM=0 1px 2px 0 rgba(0, 0, 0, 0.05)
REACT_APP_SHADOW_MD=0 4px 6px -1px rgba(0, 0, 0, 0.1)
REACT_APP_SHADOW_LG=0 10px 15px -3px rgba(0, 0, 0, 0.1)
REACT_APP_SHADOW_XL=0 20px 25px -5px rgba(0, 0, 0, 0.1)

# Configuration des transitions
REACT_APP_TRANSITION_FAST=0.2s ease-in-out
REACT_APP_TRANSITION_NORMAL=0.3s ease-in-out
REACT_APP_TRANSITION_SLOW=0.5s ease-in-out

# Configuration des breakpoints
REACT_APP_BREAKPOINT_SM=640px
REACT_APP_BREAKPOINT_MD=768px
REACT_APP_BREAKPOINT_LG=1024px
REACT_APP_BREAKPOINT_XL=1280px
REACT_APP_BREAKPOINT_2XL=1536px

# Configuration des z-index
REACT_APP_Z_INDEX_DROPDOWN=1000
REACT_APP_Z_INDEX_STICKY=1100
REACT_APP_Z_INDEX_OVERLAY=1300
REACT_APP_Z_INDEX_MODAL=1400
REACT_APP_Z_INDEX_POPOVER=1500
REACT_APP_Z_INDEX_TOAST=1700
REACT_APP_Z_INDEX_TOOLTIP=1800

# Configuration des routes
REACT_APP_ROUTE_ADMIN=/admin
REACT_APP_ROUTE_ADMIN_LEGACY=/admin/legacy
REACT_APP_ROUTE_DEMO=/demo
REACT_APP_ROUTE_DASHBOARD=/dashboard

# Configuration des fonctionnalités expérimentales
REACT_APP_ENABLE_EXPERIMENTAL_FEATURES=false
REACT_APP_ENABLE_BETA_FEATURES=false
REACT_APP_ENABLE_ALPHA_FEATURES=false

# Configuration de la sécurité
REACT_APP_ENABLE_CSRF_PROTECTION=true
REACT_APP_ENABLE_XSS_PROTECTION=true
REACT_APP_ENABLE_CONTENT_SECURITY_POLICY=true

# Configuration du cache
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_DURATION=300000
REACT_APP_CACHE_MAX_SIZE=50

# Configuration des logs
REACT_APP_LOG_LEVEL=info
REACT_APP_LOG_ENABLE_CONSOLE=true
REACT_APP_LOG_ENABLE_FILE=false
REACT_APP_LOG_ENABLE_REMOTE=false

# Configuration des métriques
REACT_APP_METRICS_ENABLED=true
REACT_APP_METRICS_COLLECTION_INTERVAL=60000
REACT_APP_METRICS_ENABLE_ANALYTICS=true

# Configuration des tests
REACT_APP_ENABLE_TEST_MODE=false
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_DEBUG_TOOLS=false
